<%- include("head.ejs") %>
<body>
    <%- include("header.ejs") %>
    <div class="app-page__banner-title dark"><h1>History of your interactions</h1></div>
    <table class="history__interaction">
        <thead>
            <td>Number</td>
            <td>Work</td>
            <td>Contractor</td>
            <td>Cost</td>
            <td>Type</td>
            <td>Income?</td>
            <td>Regular</td>
        </thead>
        <tbody>
            <% for (var n=0; n<(interaction.length); n++) {%>
                <tr>
                    <td><%- JSON.stringify(n + 1)%></td>
                    <td><%- JSON.stringify(interaction[n].work).replace(/"/g, '').replace(/\b\w/g, l => l.toUpperCase())%></td>
                    <td><%- JSON.stringify(interaction[n].contractor.replace(/"/g, '').replace(/\b\w/g, l => l.toUpperCase()))%></td>
                    <td><%- JSON.stringify(interaction[n].cost)%></td>
                    <td><%- JSON.stringify(interaction[n].inType).replace(/"/g, '').replace(/\b\w/g, l => l.toUpperCase())%></td>
                    <td><%- (JSON.stringify(interaction[n].income) === 'true') ? 'yes' : 'no' %></td>
                    <td><%- (JSON.stringify(interaction[n].regular) === 'true') ? 'yes' : 'no' %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <%- include("scripts.ejs") %>
</body>
</html>