<%- include("head.ejs") %>
<%- include("header.ejs") %>
<div class="app-content__body">
    <div v-if="activeTab === 0" class="app-content__page">
        <div class="app-content__col">
            <div class="app-page__banner-title dark"><h1>New contractor</h1></div>
            <div class="app-content__form">
                <form action="/contractor" method="POST" id="makeContractor" class="make-contractor">
                    <div class="app-modal__form-row">
                        <label for="name" class="app-input__label">Name</label>
                        <input type="text" name="name" id="name" required class="app-input">
                    </div>
                    <div class="app-modal__form-row">
                        <label for="client" class="app-input__label">Client?</label>
                        <input type="checkbox" name="client" id="client" class="app-input">
                    </div>
                    <div class="app-modal__form-row">
                        <label for="regular" class="app-input__label">Regular</label>
                        <input type="checkbox" name="regular" id="regular" class="app-input">
                    </div>
                    <div class="app-modal__form-row">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("scripts.ejs") %>
</body>
</html>